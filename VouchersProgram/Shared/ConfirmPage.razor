<SfDialog @ref="DialogConfirm" @bind-Visible="@IsVisible"
AllowDragging="true" IsModal="true"
Width="500px" ShowCloseIcon="true">
<DialogTemplates>
    <Header>@ConfirmHeaderMessage</Header>
    <Content>@ConfirmContentMessage</Content>
</DialogTemplates>
<DialogButtons>
    <DialogButton Content="Confirm" IsPrimary="true" OnClick="() => OnConfirmationChange(true)"></DialogButton>
    <DialogButton Content="Cancel" IsPrimary="false" OnClick="() => OnConfirmationChange(false)"></DialogButton>
</DialogButtons>
</SfDialog>

